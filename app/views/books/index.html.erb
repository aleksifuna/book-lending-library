<h1>Available Books</h1>
<ul>
  <% @books.each do |book| %>
    <li>
      <%= link_to book.title, book_path(book) %> - <%= book.author %>
      <% if book.available? %>
        <strong>(Available)</strong>
      <% else %>
        <strong>(Borrowed)</strong>
      <% end %>
    </li>
  <% end %>
</ul>
